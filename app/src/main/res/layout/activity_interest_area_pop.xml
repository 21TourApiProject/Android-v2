<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/interest_area_pop_back"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".mainPage.interestArea.InterestAreaPopActivity">

    <TextView
        style="@style/medium_multi_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="관심지역은 최대 3개까지 홈에 추가할 수 있어요. 새로운 위치를 홈에 추가하고 싶으실 경우, 기존에 등록된 위치를 삭제한 후 시도해주세요."
        android:textColor="@color/white" />

    <TextView
        style="@style/semiBold_single_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="end"
        android:onClick="closeInterestAreaPop"
        android:text="확인"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white" />

</LinearLayout>