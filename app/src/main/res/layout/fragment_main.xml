<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".mainPage.MainFragment">


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/bottom_nav_size"
        android:foregroundGravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/bg_black"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/starryNightTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/main__logo" />

                    <Button
                        android:id="@+id/main_alarm"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/main__alarm" />

                    <Button
                        android:id="@+id/postWrite"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/mainpage_postwrite" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/subBanner_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <ImageView
                        android:id="@+id/subBanner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_image" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hello_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="14dp">

                    <TextView
                        android:id="@+id/hello_message"
                        style="@style/semiBold_multi_18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="안녕하세요, 여행자님!\n별 보러 떠나볼까요?" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/main__telescope" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/current_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="12dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/main__weather_back"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/main__weather_star" />

                            <TextView
                                android:id="@+id/location_error"
                                style="@style/medium_multi_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="현위치를 불러올 수 없습니다."
                                android:textColor="@color/gray_300"
                                android:visibility="gone" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="5dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/medium_multi_14"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="현재 계신 "
                                        android:textColor="@color/gray_300" />

                                    <TextView
                                        android:id="@+id/main__current_location"
                                        style="@style/medium_multi_14"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white" />

                                    <TextView
                                        style="@style/medium_multi_14"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" 은(는)"
                                        android:textColor="@color/gray_300" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/current_weather"
                                    style="@style/medium_multi_14"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/gray_300" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/search_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="32dp"
                    android:paddingVertical="12dp">

                    <LinearLayout
                        android:id="@+id/weather_location_search"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/main__search_back"
                        android:orientation="horizontal"
                        android:paddingHorizontal="18dp"
                        android:paddingVertical="14dp">

                        <TextView
                            style="@style/medium_single_14"
                            android:layout_width="232dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="8dp"
                            android:text="날씨가 궁금한 지역, 관측지명 검색!"
                            android:textColor="@color/gray_500" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/main__search" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/interest_area_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="9dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:id="@+id/interest_area_title"
                            style="@style/semiBold_single_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="내 관심지역 날씨" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/editInterestArea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="편집"
                            android:textColor="@color/gray_500"
                            android:visibility="gone" />

                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/interestAreaList"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.starrynight.tourapiproject.mainPage.interestArea.CustomInterestAreaView
                                android:id="@+id/interestArea0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:visibility="gone" />

                            <com.starrynight.tourapiproject.mainPage.interestArea.CustomInterestAreaView
                                android:id="@+id/interestArea1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:visibility="gone" />

                            <com.starrynight.tourapiproject.mainPage.interestArea.CustomInterestAreaView
                                android:id="@+id/interestArea2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:visibility="gone">

                            </com.starrynight.tourapiproject.mainPage.interestArea.CustomInterestAreaView>

                            <ImageView
                                android:id="@+id/addInterestArea"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="11dp"
                                android:src="@drawable/main__interest_area_add" />

                            <ImageView
                                android:id="@+id/addInterestAreaInit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="11dp"
                                android:src="@drawable/main__interest_area_add_init"
                                android:visibility="gone" />

                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/observation_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="20dp">

                        <TextView
                            style="@style/semiBold_single_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="지금 떠나기 좋은 관측지" />

                        <TextView
                            style="@style/medium_single_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="오늘 관측적합도 TOP 10"
                            android:textColor="@color/gray_500" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/main_best_fit_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="24dp"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/star_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingVertical="20dp">

                            <TextView
                                style="@style/semiBold_single_16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="오늘 볼 수 있는 별자리" />

                            <TextView
                                android:id="@+id/main_star_month_txt"
                                style="@style/medium_single_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="9월에 잘 보여요"
                                android:textColor="@color/gray_500" />
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/main_move_star"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@color/transparent"
                            android:src="@drawable/right_arrow" />
                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/main_star_today_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="24dp"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/night_sky_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingVertical="20dp">

                            <TextView
                                style="@style/semiBold_single_16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="최근 밤하늘 관측 후기" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/main_move_review"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/medium_single_12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="전체보기"
                                android:textColor="@color/gray_500" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/right_arrow_small" />
                        </LinearLayout>


                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/main_review_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="24dp"
                        android:visibility="visible" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/mainProgressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</androidx.constraintlayout.widget.ConstraintLayout>