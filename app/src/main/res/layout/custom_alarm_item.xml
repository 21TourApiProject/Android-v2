<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/alarmLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/alarm_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/alarm__star_non" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alarm_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/semiBold_single_14"
                android:text="알람 제목"
                />

            <TextView
                android:id="@+id/alarm_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                style="@style/medium_single_12"
                android:text="알람 날짜"
                />
        </LinearLayout>

        <Button
            android:id="@+id/scroll_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/up_dense" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/alarmOpen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_800"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/alarm_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            android:paddingHorizontal="34dp"
            style="@style/medium_multi_12"
            android:text="알람 내용"
            android:textColor="@color/gray_400"
             />
    </LinearLayout>

</LinearLayout>