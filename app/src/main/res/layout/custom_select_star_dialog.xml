<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/tppop_area"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/star_alart_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/star__character_planet" />

        <TextView
            android:id="@+id/star_alert_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/medium_multi_14"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginVertical="20dp"
            android:text="을(를)\n 지금부터 카메라로 찾아볼까요?" />

        <TextView
            android:id="@+id/star_alert_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/semiBold_single_14"
            android:paddingVertical="11dp"
            android:paddingHorizontal="116dp"
            android:layout_marginBottom="14dp"
            android:textColor="@color/gray_700"
            android:textAlignment="center"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/round_btn_gray"
            android:text="네 찾아볼래요!" />

        <TextView
            android:id="@+id/star_alert_negative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="11dp"
            android:textColor="@color/white"
            style="@style/semiBold_single_14"
            android:textAlignment="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="20dp"
            android:text="취소" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>