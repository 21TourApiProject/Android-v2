<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".starPage.StarSearchActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="49dp">

        <ImageView
            android:id="@+id/star_search_back_btn"
            style="@style/ImageButton.size49"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:paddingVertical="18dp"
            android:paddingStart="22dp"
            android:paddingEnd="21dp"
            android:src="@drawable/star__search_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_variable"
            android:textFontWeight="600"
            android:text="별자리 검색"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/star_search_back_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingBottom="13dp"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/postwrite__search_bar"
            android:layout_marginTop="17dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/search_view_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:src="@drawable/main__search" />

            <androidx.appcompat.widget.SearchView
                android:id="@+id/edit_search"
                style="@style/MySearchViewStyle"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="18dp"
                app:theme="@style/StarSearchView">

            </androidx.appcompat.widget.SearchView>

        </FrameLayout>

        <TextView
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_variable"
            android:textFontWeight="500"
            android:layout_weight="7"
            android:text="취소"
            android:textSize="14sp"
            android:layout_marginTop="25dp"
            android:paddingStart="8dp"
            android:textAlignment="center" />

    </LinearLayout>

    <ListView
        android:id="@+id/const_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/search_word_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/star_result_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:fontFamily="@font/pretendard_variable"
                android:textFontWeight="600"
                android:text="검색 결과"
                android:textSize="14sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/star_search_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="70dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>