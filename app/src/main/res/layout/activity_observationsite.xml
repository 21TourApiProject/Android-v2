<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".observationPage.ObservationsiteActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/obs_image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/obs_Img_slider"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:background="@drawable/default_tp" />

                <ImageButton
                    android:id="@+id/obs_back_btn"
                    style="@style/ImageButton.circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/observation__back_circle" />

                <TextView
                    android:id="@+id/obs_image_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#50000000"
                    android:text="출처표기"
                    android:textSize="10sp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"/>

                <LinearLayout
                    android:id="@+id/obs_Img_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_alignTop="@id/obs_Img_slider"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="218dp"
                    android:background="@drawable/observation__namebox"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/obs_name_txt"
                            style="@style/semiBold_single_20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:text="관측지 이름" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="12dp">

                            <ImageView
                                android:id="@+id/obs_light_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/light_good" />

                            <LinearLayout
                                android:id="@+id/obs_move_light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="8dp">

                                <TextView
                                    style="@style/semiBold_single_14"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="관측적합도"
                                    android:textColor="@color/gray_500" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="7.5dp"
                                    android:src="@drawable/move_text" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/obs_inquiry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <LinearLayout
                            android:id="@+id/obs_call"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="40dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/observation__call" />

                            <TextView
                                style="@style/semiBold_single_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="전화문의"
                                android:textColor="@color/gray_500" />

                        </LinearLayout>


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/observation__gray_line" />

                        <LinearLayout
                            android:id="@+id/obs_homepage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="40dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/observation__homepage" />

                            <TextView
                                style="@style/semiBold_single_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text="홈페이지"
                                android:textColor="@color/gray_500" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/obs_intro_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/obs_image_layout"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/obs_hashtags_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/obs_outline_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:lineSpacingExtra="3sp"
                    android:maxLines="4"
                    android:text="개요"
                    style="@style/medium_multi_14"
                    android:layout_marginHorizontal="20dp"
                    android:textColor="@color/gray_500"/>

                <TextView
                    android:id="@+id/obs_outline_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/obs_outline_txt"
                    android:layout_gravity="end"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="20dp"
                    android:paddingLeft="1dp"
                    android:text="더보기"
                    android:textColor="@color/gray_500"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

<!--                <TextView-->
<!--                    android:id="@+id/obs_type_txt"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_below="@id/obs_name_txt"-->
<!--                    android:layout_marginLeft="3dp"-->
<!--                    android:layout_marginTop="9dp"-->
<!--                    android:text="관측지 타입"-->
<!--                    android:textColor="@color/gray"-->
<!--                    android:textSize="12sp" />-->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/obs_information_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0dp"
                        android:background="@color/gray_800" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="10"
                        android:orientation="horizontal"
                        android:layout_alignParentBottom="true">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="5">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="정보"
                                style="@style/semiBold_single_16"
                                android:layout_gravity="center_horizontal"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:background="@color/white"
                                android:layout_marginTop="6dp"
                                android:layout_marginHorizontal="8dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/obs_review_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="5">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="후기"
                                    style="@style/semiBold_single_16"
                                    android:textColor="@color/gray_500" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:src="@drawable/observation__review"/>

                            </LinearLayout>



                            <TextView
                                android:layout_width="match_parent"
                                android:visibility="gone"
                                android:layout_height="3dp"
                                android:background="@color/white"
                                android:layout_marginTop="6dp"
                                android:layout_marginHorizontal="8dp"/>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/obs_foroperating_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="27dp"
                    android:paddingHorizontal="19dp">

                    <RelativeLayout
                        android:id="@+id/obs_content_layout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/Textview_observation_details_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/obs_location_btn"
                            android:text="주소" />

                        <TextView
                            android:id="@+id/obs_address_txt"
                            style="@style/Textview_observation_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="75dp"
                            android:layout_alignParentLeft="true"
                            android:layout_toLeftOf="@+id/obs_location_btn"
                            android:layout_alignBaseline="@id/obs_location_btn"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="ㅇㅇ군 ㅇㅇ시 ㅇㅇ동" />

                        <TextView
                            android:id="@+id/obs_location_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="0dp"
                            android:background="@drawable/observation__map_background"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:text="카카오맵"
                            android:textColor="@color/gray_500" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Textview_observation_details_title"
                            android:layout_alignBaseline="@id/obs_operatinghour_txt"
                            android:text="영업시간" />

                        <TextView
                            android:id="@+id/obs_operatinghour_txt"
                            style="@style/Textview_observation_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/obs_address_txt"
                            android:layout_alignLeft="@id/obs_address_txt"
                            android:text="00:00~00:00" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Textview_observation_details_title"
                            android:layout_alignBaseline="@id/obs_closedday_txt"
                            android:text="휴무일" />
                        <TextView
                            android:id="@+id/obs_closedday_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="O요일"
                            style="@style/Textview_observation_details"
                            android:layout_below="@id/obs_operatinghour_txt"
                            android:layout_alignLeft="@id/obs_address_txt"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Textview_observation_details_title"
                            android:layout_alignBaseline="@id/obs_parking_txt"
                            android:text="주차시설" />
                        <TextView
                            android:id="@+id/obs_parking_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="주차정보있음"
                            style="@style/Textview_observation_details"
                            android:layout_below="@id/obs_closedday_txt"
                            android:layout_alignLeft="@id/obs_address_txt"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Textview_observation_details_title"
                            android:layout_alignBaseline="@id/obs_guide_txt"
                            android:text="이용안내" />

                        <TextView
                            android:id="@+id/obs_guide_txt"
                            style="@style/medium_multi_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/obs_parking_txt"
                            android:layout_alignLeft="@id/obs_address_txt"
                            android:layout_marginBottom="12dp"
                            android:textColor="@color/gray_300"
                            android:text="이용안내 글 전체" />


                        <TextView
                            android:id="@+id/obs_fee_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Textview_observation_details_title"
                            android:layout_below="@id/obs_guide_txt"
                            android:text="입장료" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/obs_entrancefee_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/obs_fee_name"
                            android:layout_marginTop="12dp"
                            android:isScrollContainer="false"
                            android:orientation="vertical" />

                        <LinearLayout
                            android:id="@+id/obs_fee_more_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/obs_entrancefee_layout"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp"
                            android:layout_centerHorizontal="true">

                            <TextView
                                android:id="@+id/obs_fee_more_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="더보기"
                                android:textColor="@color/gray_500"
                                style="@style/semiBold_single_14"
                                android:layout_marginRight="4.5dp"/>
                            <ImageView
                                android:id="@+id/obs_fee_more_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/observation__fee_more"
                                android:layout_gravity="center_vertical"/>

                        </LinearLayout>

                </RelativeLayout>
                    
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/obs_fornature_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="19dp"
                android:layout_marginTop="27dp"
                android:visibility="gone"
                tools:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Textview_observation_details_title"
                        android:text="주소" />
                    <TextView
                        android:id="@+id/obs_nature_address_txt"
                        style="@style/Textview_observation_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="75dp"
                        android:text="ㅇㅇ군 ㅇㅇ시 ㅇㅇ동" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Textview_observation_details_title"
                        android:layout_alignBaseline="@id/obs_nature_parking_txt"
                        android:text="주차시설" />
                    <TextView
                        android:id="@+id/obs_nature_parking_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="주차정보있음"
                        style="@style/Textview_observation_details"
                        android:layout_below="@id/obs_nature_address_txt"
                        android:layout_alignLeft="@id/obs_nature_address_txt"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Textview_observation_details_title"
                        android:layout_alignBaseline="@id/obs_nature_guide_txt"
                        android:text="여행팁" />

                <TextView
                    android:id="@+id/obs_nature_guide_txt"
                    style="@style/medium_multi_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/obs_nature_parking_txt"
                    android:layout_alignLeft="@id/obs_nature_address_txt"
                    android:layout_marginBottom="12dp"
                    android:textColor="@color/gray_300"
                    android:text="이용안내 글 전체" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/obs_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="61dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="추천코스"
                        style="@style/semiBold_single_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="by 별밤에디터"
                        android:textColor="@color/point_blue"
                        style="@style/medium_single_14"
                        android:layout_marginLeft="8dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/obs_course_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="19.5dp"
                    android:textColor="@color/gray_300"
                    android:layout_marginTop="14dp"
                    android:text="1번장소 > 2번장소 > 3번장소 > 4번장소"
                    style="@style/medium_multi_14"/>
                <ImageView
                    android:id="@+id/obs_course_image"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:src="@drawable/default_tp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/obs_course_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="19.5dp"/>

            </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/obs_review_tab"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/gray_800" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="10"
                        android:orientation="horizontal"
                        android:layout_alignParentBottom="true">

                        <LinearLayout
                            android:id="@+id/obs_info_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="5">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="정보"
                                style="@style/semiBold_single_16"
                                android:textColor="@color/gray_500"
                                android:layout_gravity="center_horizontal"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:visibility="gone"
                                android:background="@color/white"
                                android:layout_marginTop="6dp"
                                android:layout_marginHorizontal="8dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="5">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/semiBold_single_16"
                                    android:text="후기" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="4dp"
                                    android:src="@drawable/observation__review_on"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:background="@color/white"
                                android:layout_marginTop="6dp"
                                android:layout_marginHorizontal="8dp"/>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp">


                    <TextView
                        android:id="@+id/postImageText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="방문자 게시글"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/writePost_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="방문소감쓰기>"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/relatePostLinear"/>

                    <LinearLayout
                        android:id="@+id/relatePostLinear"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="18dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/postImageText">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            app:cardCornerRadius="5dp">

                            <ImageView
                                android:id="@+id/relateImage"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_weight="1"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/default_image" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            app:cardCornerRadius="5dp">

                            <ImageView
                                android:id="@+id/relateImage2"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_weight="1"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/default_image"
                                android:visibility="gone" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp">

                            <FrameLayout
                                android:id="@+id/relateImageFrame"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/relateImage3"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:layout_weight="1"
                                    android:adjustViewBounds="true"
                                    android:foreground="@drawable/observation__moreimage"
                                    android:scaleType="centerCrop"
                                    android:visibility="visible" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="+더 보기" />
                                </LinearLayout>

                            </FrameLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

