<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp">

        <ImageView
            android:id="@+id/fit_obs_image"
            android:layout_width="180dp"
            android:layout_height="126dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/default_tp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/fit_obs_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="갈릉 안반데기"
        android:textAlignment="viewStart"
        android:textColor="@color/gray_200"
        style="@style/medium_single_14"/>

    <TextView
        android:id="@+id/fit_obs_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="서울시 마포구 와우산로 주소 한줄만"
        android:textAlignment="viewStart"
        android:textColor="@color/gray_500"
        style="@style/medium_single_12"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="관측적합도 "
            android:textAlignment="viewStart"
            android:textColor="@color/point_blue"
            style="@style/medium_single_12"/>

        <TextView
            android:id="@+id/fit_obs_fit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="90%"
            android:textAlignment="viewStart"
            android:textColor="@color/point_blue"
            style="@style/medium_single_12"/>
    </LinearLayout>


</LinearLayout>