<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".searchPage.SearchResultListFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/srf_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:id="@+id/srf_no_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/srl_no_result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/searchResult_noResult"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:layout_gravity="center_horizontal"
            style="@style/medium_multi_16" />
    </LinearLayout>

</LinearLayout>