<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="3dp">
        <ImageView
            android:id="@+id/post_profileImage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginStart="17.86dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/post__profile_no_image" />

        <TextView
            android:id="@+id/post_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            style="@style/semiBold_single_14"
            android:textColor="@color/gray_500"
            android:text="닉네임"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/comment_option"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <Button
                android:layout_width="16dp"
                android:layout_height="4dp"
                android:background="@drawable/comment_option"
                android:layout_marginEnd="23dp"
                android:layout_gravity="center"
                />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/postComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="4dp"
        style="@style/semiBold_multi_14"
        android:textColor="@color/gray_300"
        android:text="댓글" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginEnd="16dp"
            style="@style/medium_single_12"
            android:textColor="@color/gray_500"
            android:text="시간" />

        <TextView
            android:id="@+id/reComment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="답글" />
    </LinearLayout>
</LinearLayout>